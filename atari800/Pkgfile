# Description: Emulator of Atari 800/800XL/130XE/5200 with various extensions.
# URL:         http://atari800.sourceforge.net
# Packager:    skrzyp, jot dot skrzyp at gmail dot com
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports/issues
# Depends on:  libsdl sdl_mixer sdl_image sdl_ttf sdl_sound sdl_net readline mesa3d

name=atari800
version=3.1.0
release=1
source=(http://downloads.sourceforge.net/project/$name/$name/$version/$name-$version.tar.gz)

build() {
	cd $name-$version/src
	
	./configure --prefix=/usr \
	--disable-sdltest --with-video=sdl					\
	--with-sound=sdl --with-x --with-readline				\
	--enable-rserial --enable-rnetwork					\
	--enable-linuxjoystick --enable-eventrecording				\
	--enable-voicebox --enable-stereosound					\
	--enable-clipsound --enable-consolesound --enable-volonlysound		\
	--enable-interpolatesound --enable-nonlinear_mixing 			\
	--enable-synchronized_sound --enable-pbi_mio 				\
	--enable-pbi_bb --enable-pbi_xld --disable-ide				\
	--enable-monitortrace --enable-monitorprofile --enable-monitorhints	\
	--enable-monitorbreakpoints --enable-monitorbreak --enable-monitorasm	\
	--enable-bufferedlog --enable-newcycleexact				
	make
	make install DESTDIR=$PKG
}
